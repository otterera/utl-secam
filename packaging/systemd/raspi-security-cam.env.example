# Environment overrides for raspi-security-cam.service
# Copy to /etc/default/raspi-security-cam and edit as needed

# Server
SC_HOST=0.0.0.0
SC_PORT=8000
SC_DEBUG=0

# Camera / detection
SC_FRAME_WIDTH=640
SC_FRAME_HEIGHT=480
SC_CAPTURE_FPS=10
SC_DETECT_EVERY_N_FRAMES=2
SC_SAVE_DIR=/home/pi/raspi-security-cam/data/captures
SC_SAVE_INTERVAL_SEC=1.0
SC_MAX_SAVED_IMAGES=2000
SC_ALERT_COOLDOWN_SEC=10.0
SC_GALLERY_LATEST_COUNT=12

# Schedule example: active 22:00-06:00 daily and lunchtime 12:30-13:30
# Leave empty for always-armed
SC_ACTIVE_WINDOWS=22:00-06:00,12:30-13:30

